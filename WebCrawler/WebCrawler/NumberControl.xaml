<UserControl x:Class="WebCrawler.NumberControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WebCrawler"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="200">
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="number" Content="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="14" FontWeight="Bold" FontFamily="Play" Width="56" Height="50" Margin="5" VerticalAlignment="Top"/>
        <StackPanel Grid.Column="1">
            <Button FontFamily="Play" Click="Up" Width="56" Margin="5">+</Button>
            <Button FontFamily="Play" Click="Down" Width="56">-</Button>
        </StackPanel>
    </Grid>
</UserControl>
